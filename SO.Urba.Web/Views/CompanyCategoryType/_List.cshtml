@model List<object>
@using SO.Urba.Models.ValueObjects
@using SO.Utility.Extensions;
@{

    ViewBag.Title = "_List";

    var result = Model.convertTo<CompanyCategoryTypeVo>();

}


<table class="table table-bordered table-hover">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Created By
        </th>
        <th>
            Modified
        </th>
        <th>
            isActive
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in result)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.companyCategoryTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>

            
            <td style="width:150px;">
                <a href="@Url.Action("Edit", new { id = item.companyCategoryTypeId })" class="btn" title="Edit"><i class="icon-edit"></i></a>
                <a href="@Url.Action("Details", new { id = item.companyCategoryTypeId })" class="btn" title="Details"><i class="icon-list"></i></a>
                <a href="@Url.Action("Delete", new { id = item.companyCategoryTypeId })" class="btn" title="Delete"><i class="icon-trash"></i></a>

            </td>
        </tr>
    }

</table>

