@model HomePageContent
@{
    ViewBag.Title = "how_it_work";
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US">
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <title> Urban Network </title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Theme Style -->
    <link rel="stylesheet" type="text/css" href="~/style.css">
    <!-- Favicon and touch icons  -->
    <link rel="shortcut icon" href="~/assets/icon/favicon.png">
    <link rel="apple-touch-icon-precomposed" href="~/assets/icon/apple-touch-icon-158-precomposed.png">
    <!--navigation bar link-->

</head>
<body class="front-page no-sidebar site-layout-full-width header-style-5 menu-has-search menu-has-cart header-sticky">

    <!--navbar-->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="" href="#"><img src="~/images/logo.png" class="img-responsive" alt="logo" /></a>
                    </div>

                </div>
                <div class="col-sm-10">
                    <div class="collapse navbar-collapse" id="myNavbar">

                        <!--social icon-->
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="nav navbar-nav navbar-right social-icon">
                                    <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                                    <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                                    <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                                    <li><a href="#"><span class="fa fa-rss"></span></a></li>
                                    <li><a href="#"><span class="fa fa-youtube"></span></a></li>
                                    <li><a href="#"><span class="fa fa-instagram"></span></a></li>

                                </ul>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <!--menu item-->
                                <ul class="nav navbar-nav navbar-right menu-margin">
                                    <li><a href="~/HTML/index">HOME</a></li>
                                    <li><a href="~/HTML/our_services">SERVICES</a></li>
                                    <li><a href="~/HTML/about_us">ABOUT US</a></li>
                                    <li><a href="~/HTML/how_it_work">HOW IT WORKS</a></li>
                                    <li><a href="~/HTML/blog">BLOG</a></li>
                                    <li><a href="#">FAQ</a></li>
                                    <li><a href="#">REVIEWS</a></li>
                                    <li><a href="~/HTML/contact_us" style="border:0;padding-right:0;">CONTACT US</a></li>
                                    <li><button class="btn" onclick="location.href='@Url.Action("Login","Account",  new { target="_blank" })'"><span class="fa fa-user-circle-o">&nbsp;&nbsp; </span>LOGIN / REGISTER</button></li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div id="wrapper" class="animsition" style="animation-duration: 1500ms; opacity: 1;">
        <div id="page" class="clearfix">
            <!--about banner section-1-->
            <div id="section1">
                @if (Model != null && Model.Section1 != null)
                {
                    @Html.Raw(Model.Section1)
                }
                else
                {
                    <div class="text-center banner-back smallbanner" contenteditable="true">
                        <h1 class="bold"> HOW IT WORKS! </h1>
                    </div>
                }
            </div>
            <!--how it work section-2-->
            <div class="container-fluid section-2">
                <div class="col-md-12">
                    <div class="wprt-spacer" data-desktop="70" data-mobi="60" data-smobi="60" style="height:70px"></div>
                </div>
                <div id="section2">
                    @if (Model != null && Model.Section2 != null)
                    {
                        @Html.Raw(Model.Section2)
                    }
                    else
                    {
                        <h2 class="text-center bold" contenteditable="true">HOW IT WORKS!</h2>
                        <div class="text-center sub-hadding">
                            <div class="wt-separator-outer">
                                <div class="wt-separator style-square text-center">
                                    <span class="separator-left bg-primary"></span>
                                    <span class="separator-right bg-primary"></span>
                                </div>
                            </div>
                            <p class="pb-color pb5" contenteditable="true">Are you a new customer who does not understand how our call service works?</p>
                            <p class="pb-color m-b0" contenteditable="true"><span style="color:orange; font-size:20px;">Not to worry!</span> In this short video, we will show you how the call in referral transaction works in 10 Steps! </p>
                            <div class="wprt-spacer" data-desktop="30" data-mobi="25" data-smobi="10" style="height:30px"></div>
                        </div>
                    }
                </div>

                <div class="row list">
                    <div id="section3">
                        @if (Model != null && Model.Section3 != null)
                        {
                            @Html.Raw(Model.Section3)
                        }
                        else
                        {
                            <div class="col-sm-7" contenteditable="true">

                                <p>
                                    <i class="fa fa-circle"></i> <span>
                                        Customer calls and requests service through our call center representative.
                                    </span>
                                </p>
                                <p><i class="fa fa-circle"></i><span>Call center representative will refers three (3) service providers.</span></p>
                                <p>
                                    <i class="fa fa-circle"></i><span>
                                        Service providers will receive customer’s request(s) for service.
                                    </span>
                                </p>
                                <p>
                                    <i class="fa fa-circle"></i><span>
                                        Service providers will call and schedule appointment with customer.
                                    </span>
                                </p>
                                <p>
                                    <i class="fa fa-circle"></i><span>
                                        Each service provider will visit the customer’s home by appointment and provide
                                        an estimate for the job.
                                    </span>
                                </p>
                                <p>
                                    <i class="fa fa-circle"></i><span>
                                        Customer makes decision from estimates and informs URN call center
                                        representative.
                                    </span>
                                </p>
                                <p>
                                    <i class="fa fa-circle"></i><span>
                                        Call center representative enters your selection into the URN database.
                                    </span>
                                </p>

                                <p>
                                    <i class="fa fa-circle"></i>

                                    <span>
                                        Work is scheduled by customer with service provider and work begins.<br />  [Please watch video for a more detailed explanation of the process]
                                    </span>
                                </p>
                            </div>

                        }

                    </div>


                    <div id="section4">
                        @if (Model != null && Model.Section4 != null)
                        {
                            @Html.Raw(Model.Section4)
                        }
                        else
                        {
                            <div class="col-sm-5" style="background-color:#f7f5f5;">

                                <iframe src="https://www.youtube.com/embed/11AUeGgV8Lk?autoplay=1" style="height:360px; width:100%;"></iframe>

                                <div class="box text-center" contenteditable="true">
                                    <h3 class="pt-10">PHONE CONSULTATION</h3>
                                    <p class="pb-color">
                                        A consultation entails an Initial free phone consultation from a Planner and/or Architect for your home remodel or construction project.
                                    </p>
                                </div>
                                <div class="box text-center" contenteditable="true">
                                    <h3 class="pt-10">HELP DESK</h3>
                                    <p class="pb-color">
                                        The Help Desk is a resource referral service for members in need of social services. A member only needs to call in and ask for the help desk to get assistance.
                                    </p>
                                </div>
                                <div class="box text-center box-margin" contenteditable="true">
                                    <h3 class="pt-10">SENIOR CARE</h3>
                                    <p class="pb-color">
                                        Senior Care is our specialized referral service for resources pertaining to the services and care of Senior Citizens.
                                    </p>
                                </div>
                            </div>
                        }
                    </div>

                </div>

            </div>
            <!--contact section 5-->
            <div id="section5">
                @if (Model != null && Model.Section5 != null)
                {
                    @Html.Raw(Model.Section5)
                }
                else
                {

                    <div class="section-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-lg-3 p-tb20 ">
                                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-lr10 clearfix ">
                                        <div class="icon-md text-primary">
                                            <img src="~/images/map.png" class="img-responsive" alt="mobile">
                                        </div>
                                        <div class="icon-content">
                                            <h6 class="fontf text-uppercase m-b0" contenteditable="true"><b> ADDRESS </b></h6>
                                            <p class="m-b0" contenteditable="true">
                                                5349 Crenshaw Boulevard, Suite 101
                                                Los Angeles, CA  90043
                                            </p>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-3 p-tb20 ">
                                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-lr10 clearfix ">
                                        <div class="icon-md text-primary">
                                            <img src="~/images/mobile.png" class="img-responsive" alt="mobile">
                                        </div>
                                        <div class="icon-content" contenteditable="true">
                                            <h6 class="fontf text-uppercase m-b0"><b> Phone </b></h6>
                                            <p class="m-b0">+1(323)290-4089</p>
                                            <p class="m-b0">+1(323)290-4089</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-sm-6 col-lg-3 p-tb20 ">
                                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-lr10 clearfix ">
                                        <div class="icon-md text-primary">
                                            <img src="~/images/printer.png" alt="printer" class="img-responsive">
                                        </div>
                                        <div class="icon-content" contenteditable="true">
                                            <h6 class="fontf text-uppercase m-b0"><b> FAX </b></h6>
                                            <p class="m-b0">FAX : (123)123-4567 </p>
                                            <p class="m-b0">FAX : (123)123-4567 </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-3 p-tb20 ">
                                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-lr10 clearfix ">
                                        <div class="icon-md text-primary">
                                            <img src="~/images/email.png" class="img-responsive" alt="email">
                                        </div>
                                        <div class="icon-content" contenteditable="true">
                                            <h6 class="fontf text-uppercase m-b0"><b>Email </b></h6>
                                            <p class="m-b0">info@demo.com</p>
                                            <p class="m-b0">info@demo1234.com</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="width:100%; height:1px; background-color:#fff;"></div>

                }
            </div>
            <!--footer section-6-->
            <div id="section6">
                @if (Model != null && Model.FooterSection1 != null)
                {
                    @Html.Raw(Model.FooterSection1)
                }
                else
                {
                    <footer id="footer">
                        <div id="footer-widgets" class="container style-1">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="widget widget_text">
                                        <h2 class="widget-title" contenteditable="true"><span>ABOUT US</span></h2>
                                        <div class="textwidget">
                                            <img src="~/images/urban-logo-Copy.jpg" width="100" height="" alt="image" class="margin-top-5 margin-bottom-5">
                                            <p contenteditable="true">
                                                The<span style="color:#ff9800;"> URBANetwork </span> founded in 1988 by a
                                                coalition of block clubs and community
                                                organizations to improve the quality of life
                                                in urban communities, created the Urban
                                                Referral Network in 2016 as a means to
                                                improve the quality of services and goods
                                                provided to urban consumers.
                                            </p>
                                            <div class="widget widget_links">

                                                <ul class="wprt-links clearfix col2" contenteditable="true">
                                                    <li class="style-2"><a href="~/HTML/Terms" style="padding-right:15px;"> Terms & Condtions </a><a href="~/HTML/Privacy"> Privacy Policy </a></li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="widget widget_links">
                                        <h2 class="widget-title" contenteditable="true"><span>COMPANY LINKS</span></h2>
                                        <ul class="wprt-links clearfix col2" contenteditable="true">
                                            <li class="style-2"><a href="~/HTML/about_us"> Phone Consultation </a></li>
                                            <li class="style-2"><a href="~/HTML/about_us"> Help Desk </a></li>
                                            <li class="style-2"><a href="~/HTML/about_us"> Senior Care </a></li>
                                        </ul>

                                        <form class="form-group input-group" style="margin-top: 20px;">
                                            <input type="text" class="form-control">
                                            <div class="input-group-btn">
                                                <button class="btn" type="submit">Subscribe</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="widget widget_information">
                                        <h2 class="widget-title" contenteditable="true"><span>CONTACT INFO</span></h2>
                                        <ul class="style-2" contenteditable="true">
                                            <li class="address clearfix">
                                                <span class="hl">Address:</span>
                                                <span class="text">
                                                    5349 Crenshaw Boulevard, Suite 101,
                                                    Los Angeles, CA  90043
                                                </span>
                                            </li>
                                            <li class="phone clearfix">
                                                <span class="hl">Phone:</span>
                                                <span class="text">+1 (323) 290-4089</span>
                                            </li>
                                            <li class="email clearfix">
                                                <span class="hl">E-mail:</span>
                                                <span class="text">contact@construction.com</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="widget widget_spacer">
                                        <div class="wprt-spacer clearfix" data-desktop="10" data-mobi="10" data-smobi="10" style="height:10px"></div>
                                    </div>
                                    <div class="widget widget_socials">
                                        <div class="socials">
                                            <a target="_blank" href="#"><i class="fa fa-twitter"></i></a>
                                            <a target="_blank" href="#"><i class="fa fa-facebook"></i></a>
                                            <a target="_blank" href="#"><i class="fa fa-google-plus"></i></a>
                                            <a target="_blank" href="#"><i class="fa fa-instagram"></i></a>
                                            <a target="_blank" href="#"><i class="fa fa-linkedin"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                }
            </div>
            <!-- Bottom -->
            <div id="section7">
                @if (Model != null && Model.FooterSection2 != null)
                {
                    @Html.Raw(Model.FooterSection2)
                }
                else
                {
                    <div id="bottom" class="clearfix style-1">
                        <div id="bottom-bar-inner" class="wprt-container">
                            <div class="bottom-bar-inner-wrap">

                                <div class="bottom-bar-content" contenteditable="true">
                                    Copyright &copy; 2018 URBAN Network.
                                    <!-- /#copyright -->
                                </div><!-- /.bottom-bar-content -->
                                <div class="bottom-bar-menu" contenteditable="true">
                                    Powered by YES IT Labs
                                </div><!-- /.bottom-bar-menu -->
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- End copyright -->
        </div>
    </div>
    <a id="scroll-top"></a>
    <!-- BackToTop Button -->
    <!-- Javascript -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/animsition.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/countTo.js"></script>
    <script src="~/assets/js/fitText.js"></script>
    <script src="~/assets/js/flexslider.js"></script>
    <script src="~/assets/js/vegas.js"></script>
    <script src="~/assets/js/cube.portfolio.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $('div[contenteditable="true"]').attr('contenteditable', false);
            $('p[contenteditable="true"]').attr('contenteditable', false);
            $('h1[contenteditable="true"]').attr('contenteditable', false);
            $('h2[contenteditable="true"]').attr('contenteditable', false);
            $('h3[contenteditable="true"]').attr('contenteditable', false);
            $('ul[contenteditable="true"]').attr('contenteditable', false);
            $('li[contenteditable="true"]').attr('contenteditable', false);//blockquote
            $('h4[contenteditable="true"]').attr('contenteditable', false);
            $('a[contenteditable="true"]').attr('contenteditable', false);
        });

    </script>
</body>
</html>

