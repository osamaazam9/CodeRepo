@model List<object>
@using SO.Urba.Models.ValueObjects
@using SO.Utility.Extensions;
@using SO.Urba.Managers;
@{

    ViewBag.Title = "_List";

    var result = Model.convertTo<QuestionTypeVo>();

}

<table class="table table-bordered table-hover">
    <tr>
        <th>
            QuestionText
        </th>
        <th></th>
    </tr>

    @foreach (var item in result)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.questionText)
            </td>
            <td style="width:100px;">
                @if (CurrentMember.hasRoleOf("admin"))
                {
                <a href="@Url.Action("Edit", new { id = item.questionTypeId })" class="btn" title="Edit"><i class="icon-edit"></i></a>
                }
                <a href="@Url.Action("Details", new { id = item.questionTypeId })" class="btn" title="Details"><i class="icon-list"></i></a>
                @*@if (CurrentMember.hasRoleOf("admin"))
                {
                <a href="@Url.Action("Delete", new { id = item.questionTypeId })" class="btn" title="Delete"><i class="icon-trash"></i></a>
                }*@
           </td>
        </tr>
    }

</table>
