@{
    ViewBag.Title = "Login";
}
<br />
<br />
<br />
<form class="offset6" style="width:240px; border-width:3px; border-color:gray; border-style:inset" method="post" action="@Url.Action("Login")">
    <h2 style="text-align:center">Login</h2>
    <div class="form-group">
        <label for="exampleInputEmail1">User Name</label>
        @{ 
           if (ViewBag.uname != null) { 
              <input id="username" name="username" class="form-control" type="text" value="@ViewBag.uname" placeholder="Username" required="required"> 
            }
            else { 
               <input id="username" name="username" class="form-control" type="text" placeholder="Username" required="required"> 
            }
        } 
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Password</label>
        @{
            if (ViewBag.uname != null) {
                <input id="password" name="password" class="form-control" type="password" placeholder="Password" autofocus required="required">
            }
            else {
                <input id="password" name="password" class="form-control" type="password" placeholder="Password" required="required">
            }
        }
    </div>
    <div class="form-group">
        <div class="col-sm-offset-6">
            <button style="margin:0 auto; display:block;" type="submit" class="btn">Sign In</button>
        </div>
    </div>
    <div class="span12" style="color: red">
        <br/>
        <b> @Html.ValidationSummary()
        </b>
    </div>

</form>